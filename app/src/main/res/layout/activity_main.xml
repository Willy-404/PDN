<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Calcular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edpeso" />

    <EditText
        android:id="@+id/edpeso"
        android:layout_width="189dp"
        android:layout_height="38dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="Informe seu Peso"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/edaltura"
        app:layout_constraintEnd_toStartOf="@+id/edaltura"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edaltura" />

    <EditText
        android:id="@+id/edaltura"
        android:layout_width="170dp"
        android:layout_height="46dp"
        android:layout_marginTop="319dp"
        android:ems="10"
        android:hint="Informe sua Altura"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edpeso"
        app:layout_constraintStart_toStartOf="@+id/tvaltura"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvpeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="Peso"
        app:layout_constraintBottom_toTopOf="@+id/edpeso"
        app:layout_constraintStart_toStartOf="@+id/edpeso" />

    <TextView
        android:id="@+id/tvaltura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="Altura"
        app:layout_constraintBottom_toTopOf="@+id/edaltura"
        tools:layout_editor_absoluteX="216dp" />

    <TextView
        android:id="@+id/tvresultadoimc"
        android:layout_width="6dp"
        android:layout_height="14dp"
        android:layout_marginStart="44dp"
        android:text="------"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>